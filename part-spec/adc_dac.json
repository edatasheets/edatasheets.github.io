{
    "$id": "https://github.com/chromeos/digital-datasheets/blob/main/part-spec/adc_dac.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "adc_dac",
    "oneOf": [
        {
            "title": "adc",
            "type": "object",
            "required": [
                "componentID"
            ],
            "properties": {
                "componentID": {
                    "description": "common component identifying information, such as mpn",
                    "$ref": "definitions.json#/componentID"
                },
                "digitalResolution": {
                    "description": "number of bits of resolution in the digital output",
                    "type": "number"
                },
                "conversionTime": {
                    "description": "time required to convert from an analog signal to digital output",
                    "comment": "units of seconds",
                    "$ref": "definitions.json#/unit"
                },
                "sampleRate": {
                    "description": "maximum rate at which the ADC can convert samples",
                    "$comment": "unit of hertz",
                    "$ref": "definitions.json#/unit"
                },
                "offsetError": {
                    "description": "difference (in LSB) of the output at the zero point between an actual and ideal ADC",
                    "comment": "units of LSB",
                    "type": "number"
                },
                "gainError": {
                    "description": "difference (in LSB) of how the actual transfer function matches the ideal transfer function, also called full scale error",
                    "comment": "units of LSB",
                    "type": "number"
                },
                "integralNonlinearity": {
                    "description": "deviation of an actual transfer function from an ideal transfer function, in LSB",
                    "comment": "units of LSB",
                    "type": "number"
                },
                "differentialNonlinearity": {
                    "description": "difference (in LSB) in step width between the actual and ideal transfer functions",
                    "comment": "units of +/- LSB",
                    "type": "number"
                },
                "rmsNoise": {
                    "description": "root mean square (RMS) noise of ADC",
                    "comment": "units of LSB",
                    "type": "number"
                },
                "SNR": {
                    "description": "signal to noise (SNR) ratio of the converter",
                    "comment": "units of dB",
                    "type": "number"
                },
                "interface": {
                    "description": "digital communication interfaces supported",
                    "examples": [
                        "spi",
                        "i2c"
                    ],
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "inputType": {
                    "description": "whether the ADC has a single ended or differential input",
                    "enum": [
                        "singleEnded",
                        "differential"
                    ],
                    "type": "string"
                },
                "inputChannels": {
                    "description": "number of input channels",
                    "type": "number"
                },
                "currentConsumption": {
                    "description": "current used by device in various power modes",
                    "$ref": "definitions.json#/currentConsumption"
                },
                "pins": {
                    "description": "array of pin objects with associated properties",
                    "type": "array",
                    "items": {
                        "$ref": "definitions.json#/pinSpec"
                    }
                },
                "package": {
                    "description": "component's package size and description",
                    "$ref": "definitions.json#/package"
                }
            }
        },
        {
            "title": "dac",
            "type": "object",
            "required": [
                "componentID"
            ],
            "properties": {
                "componentID": {
                    "description": "common component identifying information, such as mpn",
                    "$ref": "definitions.json#/componentID"
                },
                "digitalResolution": {
                    "description": "number of bits of resolution",
                    "type": "number"
                },
                "offsetError": {
                    "description": "analog response to an input code of all zeros",
                    "comment": "units of percentage of full scale range",
                    "$ref": "definitions.json#/unit"
                },
                "gainError": {
                    "description": "difference (in percentage of FSR) of how well the slope of the actual transfer function matches the ideal transfer function",
                    "comment": "units of percentage of full scale range",
                    "$ref": "definitions.json#/unit"
                },
                "integralNonlinearity": {
                    "description": "deviation of an actual transfer function from an ideal transfer function, in LSB",
                    "comment": "units of LSB",
                    "type": "number"
                },
                "differentialNonlinearity": {
                    "description": "difference between the ideal and the actual output responses for successive DAC codes, in LSB",
                    "comment": "units of +/- LSB",
                    "type": "number"
                },
                "settlingTime": {
                    "description": "time from application of input code to valid output response",
                    "comment": "units of seconds",
                    "$ref": "definitions.json#/unit"
                },
                "sampleRate": {
                    "description": "maximum rate at which the DAC can convert samples",
                    "$comment": "unit of hertz",
                    "$ref": "definitions.json#/unit"
                },
                "interface": {
                    "description": "digital communication interfaces supported",
                    "examples": [
                        "spi",
                        "i2c"
                    ],
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "otuputType": {
                    "description": "whether the DAC has a single ended or differential output",
                    "enum": [
                        "singleEnded",
                        "differential"
                    ],
                    "type": "string"
                },
                "outputChannels": {
                    "description": "number of output channels",
                    "type": "number"
                },
                "currentConsumption": {
                    "description": "current used by device in various power modes",
                    "$ref": "definitions.json#/currentConsumption"
                },
                "pins": {
                    "description": "array of pin objects with associated properties",
                    "type": "array",
                    "items": {
                        "$ref": "definitions.json#/pinSpec"
                    }
                },
                "package": {
                    "description": "component's package size and description",
                    "$ref": "definitions.json#/package"
                }
            }
        }
    ]
}