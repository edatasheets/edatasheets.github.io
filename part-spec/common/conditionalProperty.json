{
    "$id": "https://github.com/edatasheets/edatasheets.github.io/blob/main/part-spec/common/conditionalProperty.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "specification of the conditional property object",
    "conditionalProperty": {
        "type": "object",
        "properties": {
            "value": {
                "description": "value of property",
                "$ref": "../common/unit.json#/unit"
            },
            "conditions": {
                "description": "conditions under which the property is measured",
                "type": "array",
                "items": {
                    "type": "string"
                }
            }
        }
    }
}