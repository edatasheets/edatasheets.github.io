{
    "$id": "https://github.com/chromeos/digital-datasheets/blob/main/part-spec/ic io.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "ic io",
    "oneOf": [
        {
            "title": "redriver",
            "type": "object",
            "required": [
                "componentID"
            ],
            "properties": {
                "componentID": {
                    "description": "common component identifying information, such as mpn",
                    "$ref": "definitions.json#/componentID"
                },
                "numberChannels": {
                    "description": "number of lanes (single ended or differential) supported by redriver",
                    "type": "number"
                },
                "interface": {
                    "description": "list of interface(s) supported by redriver",
                    "examples": [
                        "HDMI",
                        "DP HBR3",
                        "USB3.1 Gen2"
                    ],
                    "type": "array"
                },
                "maxDataRate": {
                    "description": "maximum data rate supported by redriver",
                    "comment": "units of Hz",
                    "$ref": "definitions.json#/unit"
                },
                "package": {
                    "description": "component's package size and description",
                    "$ref": "definitions.json#/package"
                },
                "pins": {
                    "description": "array of pin objects with associated properties",
                    "type": "array",
                    "items": {
                        "$ref": "definitions.json#/pinSpec"
                    }
                }
            }
        },
        {
            "title": "retimer",
            "type": "object",
            "required": [
             "componentID"
            ],
            "properties": {
                "componentID": {
                    "description": "common component identifying information, such as mpn",
                    "$ref": "definitions.json#/componentID"
                },
                "numberOfLanes": {
                    "description": "number of lanes supported by a device",
                    "type": "number"
                },
                "interface": {
                    "description": "list of interface(s) supported by a device",
                    "examples": [
                        "HDMI",
                        "DP1.4",
                        "USB3.2 Gen2x1",
                        "PCIe3.0",
                        "TBT3.0",
                        "USB4"
                    ],
                    "type": "array"
                },
                "dpMaxLinkRate": {
                    "description": "Max link rate supported by DP interface of a device",
                    "examples": [
                        "HBR",
                        "HBR2",
                        "HBR33",
                        "UHBR10",
                        "UHBR13.5"
                    ],
                    "type": "string"
                },
                "maxDataRate": {
                    "description": "maximum data rate supported by a device",
                    "comment": "units of Hz",
                    "$ref": "definitions.json#/unit"
                },
                "integratedAuxLsSwitch": {
                    "description": "whether the AUX/LSx switch for SBU is integrated",
                    "type": "boolean"
                },
                "commonClock": {
                    "description": "whether a device supports common reference clock",
                    "type": "boolean"
                },
                "sris": {
                    "description": "whether a device supports Seperate Reference clock with Independent Spread spectrum clocking(SRIS)",
                    "type": "boolean"
                },
                "srns": {
                    "description": "whether a device supports Seperate Reference clock with No Spread spectrum clocking (SRNS)",
                    "type": "boolean"
                },
                "package": {
                    "description": "component's package size and description",
                    "$ref": "definitions.json#/package"
                },
                "pins": {
                    "description": "array of pin objects with associated properties",
                    "type": "array",
                    "items": {
                    "$ref": "definitions.json#/pinSpec"
                    }
                }
            }
        },        
        {
            "title": "bridge chip",
            "type": "object",
            "required": [
                "componentID"
            ],
            "properties": {
                "componentID": {
                    "description": "common component identifying information, such as mpn",
                    "$ref": "definitions.json#/componentID"
                },
                "muxRatio": {
                    "description": "ratio of inputs to outputs",
                    "examples": [
                        "2:1",
                        "1:1",
                        "etc."
                    ],
                    "type": "string"
                },
                "inputInterfaces": {
                    "description": "list of interfaces at the input of the bridge",
                    "examples": [
                        "HDMI2.0",
                        "DP HBR2"
                    ],
                    "type": "string"
                },
                "outputInterfaces": {
                    "description": "list of interfaces at the output of the bridge",
                    "examples": [
                        "DP HBR2"
                    ],
                    "type": "array"
                },
                "package": {
                    "description": "component's package size and description",
                    "$ref": "definitions.json#/package"
                },
                "pins": {
                    "description": "array of pin objects with associated properties",
                    "type": "array",
                    "items": {
                        "$ref": "definitions.json#/pinSpec"
                    }
                }
            }
        },
        {
            "title": "mux",
            "type": "object",
            "required": [
                "componentID"
            ],
            "properties": {
                "componentID": {
                    "description": "common component identifying information, such as mpn",
                    "$ref": "definitions.json#/componentID"
                },
                "muxRatio": {
                    "description": "ratio of inputs to outputs",
                    "examples": [
                        "2:1",
                        "1:1",
                        "etc."
                    ],
                    "type": "string"
                },
                "inputInterfaces": {
                    "description": "list of interfaces mux is designed for",
                    "examples": [
                        "HDMI2.0",
                        "DP HBR2"
                    ],
                    "type": "string"
                },
                "insertionLoss": {
                    "description": "insertion loss through mux",
                    "comment": "units of dB",
                    "type": "number"
                },
                "package": {
                    "description": "component's package size and description",
                    "$ref": "definitions.json#/package"
                },
                "pins": {
                    "description": "array of pin objects with associated properties",
                    "type": "array",
                    "items": {
                        "$ref": "definitions.json#/pinSpec"
                    }
                }
            }
        },
        {
            "title": "level shifter",
            "type": "object",
            "required": [
                "componentID"
            ],
            "properties": {
                "componentID": {
                    "description": "common component identifying information, such as mpn",
                    "$ref": "definitions.json#/componentID"
                },
                "inputVoltage": {
                    "description": "input voltage level of level shifter",
                    "comment": "units of volts",
                    "$ref": "definitions.json#/unit"
                },
                "outputVoltage": {
                    "description": "output voltage level of level shifter",
                    "comment": "units of volts",
                    "$ref": "definitions.json#/unit"
                },
                "package": {
                    "description": "component's package size and description",
                    "$ref": "definitions.json#/package"
                },
                "pins": {
                    "description": "array of pin objects with associated properties",
                    "type": "array",
                    "items": {
                        "$ref": "definitions.json#/pinSpec"
                    }
                }
            }
        }
    ]
}
