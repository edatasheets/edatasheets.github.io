{
    "$id": "https://github.com/edatasheets/digital-datasheets/blob/main/part-spec/ic_misc/tpm.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "specification of tpm",
    "tpm": {
        "type": "object",
        "required": [
            "partType"
        ],
        "properties": {
            "partType": {
                "description": "part type",
                "enum": [
                    "tpm"
                ],
                "type": "string"
            },
            "interface": {
                "description": "describes the communication interface from the chip to the host",
                "examples": [
                    "spi",
                    "i2c",
                    "lpc"
                ],
                "type": "array",
                "items": {
                    "type": "string"
                }
            },
            "currentConsumption": {
                "description": "current used by device in various power modes",
                "type": "array",
                "items": {
                    "$ref": "../common/currentConsumption.json#/currentConsumption"
                }
            }
        },
        "additionalProperties": false
    }
}
